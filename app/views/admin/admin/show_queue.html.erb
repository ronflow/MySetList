<div class="container mx-auto px-4 py-8">
  <div style="zoom: 75%;">
    <div class="flex justify-between items-center mb-6">
      <h1 class="text-2xl font-bold">Queue for <%= @event.description %></h1>
      <%= link_to "Back to Admin", admin_root_path, 
          class: "px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-gray-600 hover:bg-gray-700" %>
    </div>

  
    <table 
      <thead>
        <tr>
          <th>Scroll</th>
          <th>

            <table class="min-w-full divide-y divide-gray-200">
              <thead>
                <tr>
                  <th>Position</th>
                  <th>Song</th>
                  <th>Artist</th>
                  <th>Performer</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody id="queue-table-body">
                <% @queues.order(:position).each do |queue| %>
                  <tr data-id="<%= queue.id %>">
                    <td><%= queue.position %></td>
                    <td><%= queue.song.name %></td>
                    <td><%= queue.song.artist %></td>
                    <td><%= queue.performer.name %></td>
                    <td>
                      <%= button_to "Delete",
                          event_event_song_queue_path(@event, queue),
                          method: :delete,
                          data: { turbo_confirm: "Are you sure you want to remove this song from the queue?" },
                          class: "text-red-600 hover:text-red-900" %>
                    </td>
                    <tr id="queue_row_<%= queue.id %>" data-id="<%= queue.id %>">
                  </tr>
                <% end %>
              </tbody>
            </table>
  
          </th>
        </tr>
      </thead>
    </table>
  </div>
</div>