<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl font-bold">Queue for <%= @event.description %></h1>
    <%= link_to "Back to Admin", admin_root_path, 
        class: "px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-gray-600 hover:bg-gray-700" %>
  </div>

  <table class="min-w-full divide-y divide-gray-200">
    <thead>
      <tr>
        <th class="px-6 py-3 bg-gray-50 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Song</th>
        <th class="px-6 py-3 bg-gray-50 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Artist</th>
        <th class="px-6 py-3 bg-gray-50 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Performer</th>
        <th class="px-6 py-3 bg-gray-50 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
      </tr>
    </thead>
    <tbody class="bg-white divide-y divide-gray-200">
      <% @queues.each do |queue| %>
        <tr>
          <td class="px-6 py-4"><%= queue.song.name %></td>
          <td class="px-6 py-4"><%= queue.song.artist %></td>
          <td class="px-6 py-4"><%= queue.performer.name %></td>
          <td class="px-6 py-4">
            <%= button_to "Delete", 
                event_event_song_queue_path(@event, queue), 
                method: :delete,
                form: { data: { turbo_confirm: "Are you sure you want to remove this song from the queue?" } },
                class: "text-red-600 hover:text-red-900" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>