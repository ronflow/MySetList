<!-- app/views/events/show.html.erb -->
<p style="color: green"><%= notice %></p>

  <%= render @event %>

  <div>
    <%= link_to "Voltar para Eventos", events_path, 
        role: "button" %>
    <%= link_to "Editar Evento", edit_event_path(@event), 
        role: "button" %>
  </div>

<hr>

  <div>
    <%= button_to "Deletar Evento", @event, method: :delete, 
        style: "background-color: #dc3545; color: white; padding: 8px 16px; border: none; border-radius: 4px; cursor: pointer;",
        confirm: "Tem certeza que deseja deletar este evento?" %>
  </div>

