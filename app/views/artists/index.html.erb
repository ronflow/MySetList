<!-- app/views/artists/index.html.erb -->
<div style="zoom: 75%;">
  <h1>Meus Artistas</h1>

  <br>

  <% @artists.each do |artist| %>
    <div style="display: flex; align-items: center; margin-bottom: 20px;">
      <!-- Logo do Artist -->
      <div style="margin-right: 20px;">
        <% if artist.logo.present? %>
          <%= image_tag artist.logo, 
              alt: "Logo de #{artist.name}", 
              style: "width: 80px; height: 80px; object-fit: cover; border-radius: 8px; border: 2px solid #ddd;" %>
        <% else %>
          <div style="width: 80px; height: 80px; background-color: #f8f9fa; border: 2px solid #ddd; border-radius: 8px; display: flex; align-items: center; justify-content: center; color: #6c757d;">
            <span style="font-size: 12px; text-align: center;">Sem<br>Logo</span>
          </div>
        <% end %>
      </div>
      
      <!-- Informações do Artist -->
      <div>
        <h2 style="margin: 0 0 10px 0;"><%= artist.name %></h2>
        <div style="display: flex; gap: 10px; flex-wrap: wrap;">
          <%= link_to "Ver artista", artist_path(artist), 
              role: "button" %>

          <%= link_to "Editar Artista", edit_artist_path(artist), 
              role: "button" %>

          <%= link_to "Eventos (#{artist.events.count})", 
              events_path(artist_id: artist.id), 
              role: "button", 
              class: "btn-success" %>
        </div>
      </div>
    </div>
    <hr>
  <% end %>

  <!-- No topo da página de sets do artista -->
  <%= link_to "Importar Músicas", import_csv_songs_path, class: "btn btn-success" %>

  <% if current_user && current_user.artists.empty? %>
    <%= link_to "Novo Artista", new_artist_path, role: "button" %>
  <% end %>

  <hr>

  <!-- app/views/artists/index.html.erb -->
  <%= link_to "Voltar para Admin", admin_root_path, 
    role: "button" %>
      
</div>