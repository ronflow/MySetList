<!-- app/views/artists/_form.html.erb -->
<%= form_with(model: artist) do |form| %>
  <% if artist.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(artist.errors.count, "error") %> prohibited this artist from being saved:</h2>
      <ul>
        <% artist.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div style="margin-bottom: 15px;">
    <%= form.label :name, style: "display: block; margin-bottom: 5px;" %>
    <%= form.text_field :name, style: "width: 100%; padding: 8px; border: 1px solid #ccc; border-radius: 4px;" %>
  </div>

  <!-- Campo para upload de logo -->
  <div class="field">
    <%= form.label :logo, "Logo do Artist" %>
    <%= form.file_field :logo, accept: "image/*" %>
    <% if artist.logo.attached? %>
      <div style="margin-top: 10px;">
        <%= image_tag artist.logo, width: 100 %>
        <p><small>Logo atual</small></p>
      </div>
    <% end %>
  </div>

  <!-- Campo para upload de vídeo -->
  <div class="field">
    <%= form.label :video, "Vídeo" %>
    <%= form.file_field :video, accept: "video/*" %>
  </div>

  <div style="margin-bottom: 15px;">
    <%= form.label :link1, "Link 1 (Website/Rede Social)", style: "display: block; margin-bottom: 5px;" %>
    <%= form.url_field :link1, placeholder: "https://www.exemplo.com", 
        style: "width: 100%; padding: 8px; border: 1px solid #ccc; border-radius: 4px;" %>
  </div>

  <div style="margin-bottom: 15px;">
    <%= form.label :link2, "Link 2 (Website/Rede Social)", style: "display: block; margin-bottom: 5px;" %>
    <%= form.url_field :link2, placeholder: "https://www.exemplo.com", 
        style: "width: 100%; padding: 8px; border: 1px solid #ccc; border-radius: 4px;" %>
  </div>

  <div>
    <%= form.submit %>
  </div>

<% end %>