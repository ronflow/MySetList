<!-- app/views/welcome/index.html.erb -->

<table>
  <tr>
    <td>
      <h1>MySetList</h1>
      <h3>Gerenciador de músicas e Fila de Artistas</h3>
      <h9>by: Stage Invaders</h9>
    </td>
    <td>
      <%= image_tag 'RFguitNoBG.png', alt: 'Logo', class: 'logo' %>
    </td>
   
  </tr>
</table>

<table>
  <tr>
    <td>
      <h8>Instruções: Selecione um Evento; de lá escolha a Música; preencha o nome ou apelido do cantor, e selecione adicionar a fila</h8>
      <br>
      <br>
      <h4>Eventos:</h4>
      <ul>
      
        <% @events.each do |event| %>
          <li>
            <%= link_to "#{event.event_date} - #{event.description}", event_path(event) %>
          </li>
        <% end %>
      </ul>
    </td>
  </tr>
</table>
    
